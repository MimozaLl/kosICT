<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_visual"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tblayout_home"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/gradient"
            android:paddingTop="5dp" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageViewSfk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sfk"
                    android:stretchColumns="*" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="Program :"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100" >

                <Button
                    android:id="@+id/buttonSaturDay"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="100"
                    android:background="@drawable/button_click"
                    android:text="Saturday (Day 1)"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100" >

                <Button
                    android:id="@+id/buttonSunday"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="100"
                    android:background="@drawable/button_click"
                    android:text="Sunday (Day 2)"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:weightSum="100" >

                <Button
                    android:id="@+id/buttonMonday"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="100"
                    android:background="@drawable/button_click"
                    android:text="Monday (Day 3)"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/buttonSpeakers"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_click"
                    android:text="Speakers"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/buttonSponsors"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_click"
                    android:text="Sponsors"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp" >

                <Button
                    android:id="@+id/buttonAbout"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_click"
                    android:text="About"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/buttonVenue"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_click"
                    android:text="Venues"
                    android:textColor="@color/Text_Transparent"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/Semi_Transparent"
            android:gravity="center"
            android:padding="5dp"
            android:text="Organized by: STIKK"
            android:textColor="@color/White" />
    </RelativeLayout>

</ScrollView>