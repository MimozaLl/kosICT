<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitleListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#006699" />

    <ImageView
        android:id="@+id/ImageViewDigitalTransform"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/digital_transformation" />

    <ListView
        android:id="@+id/DigitalTransform"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#006699"
        android:dividerHeight="1dp" >
    </ListView>

    <ImageView
        android:id="@+id/ImageViewOutsourcingFuture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/outsourcing_future" />

    <ListView
        android:id="@+id/OutsourcingFuture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#006699"
        android:dividerHeight="1dp" >
    </ListView>

    <ImageView
        android:id="@+id/ImageViewMobileSolutions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mobile_solutions" />

    <ListView
        android:id="@+id/MobileSolutions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#006699"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>